{
  "train_micro_batch_size_per_gpu": 12,
  "gradient_accumulation_steps": 4,
  "gradient_clipping": 1.0,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.001,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0
    }
  },
  "fp16": {
    "enabled": false
  },
  "zero_optimization": {
    "stage": 2,
    "overlap_comm": true,
    "contiguous_gradients": true,
    "reduce_bucket_size": 1e9,
    "allgather_bucket_size": 1e9
  },
  "scheduler": {
    "type": "WarmupLR",
    "params": {
	"warmup_min_lr": 0,
	"warmup_max_lr": 0.001,
	"warmup_num_steps": 1000
     },
  },
  "wandb": {
    "enabled": true
  },
  "flops_profiler": {
    "enabled": false,
    "profile_step": 1,
    "module_depth": -1,
    "top_modules": 1,
    "detailed": true,
    "output_file": null,
  }
}
